//-------------------------------
// TVShow Detail Content Renderer
//-------------------------------

import '../TV/data/TVShow.schema'

particle TVShowPanel in '../TV/source/TVShowPanel.js'
  in TVShow show
  consume content
    provide action
    provide episodes
  description `${show} details`

recipe TVShowDetail
  use #selected as selected
  TVShowPanel
    show = selected
    consume content
      provide action
      provide episodes
